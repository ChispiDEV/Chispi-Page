{
  "name": "chispi-page",
  "type": "module",
  "exports": {
    "./*": "./*"
  },
  "scripts": {
    "check-structure": "node scripts/check-structure.js",
    "check-structure-debug": "node scripts/check-structure-debug.js",
    "verify": "node scripts/verify-functionality.js",
    "full-check": "npm run check-structure && npm run verify",
    "build:dev": "set NODE_ENV=development&& node scripts/build/adaptive-build.js",
    "build:prod": "set NODE_ENV=production&& node scripts/build/adaptive-build.js",
    "build": "node scripts/build/adaptive-build.js",
    "test": "node scripts/test/test-runner.js",
    "test:build": "npm run build:dev && npm run test",
    "dev": "npm run build:dev && npx serve dist",
    "deploy": "node scripts/deploy/deploy.js",
    "clean": "rm -rf dist logs",
    "analyze": "node scripts/analyze/analyze-build.js"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "sass": "^1.93.2",
    "terser": "^5.44.0"
  }
}
