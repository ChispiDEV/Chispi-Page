# Gemfile
source "https://rubygems.org"

# Jekyll
gem "jekyll", "~> 4.3.2"

# Plugins útiles
gem "jekyll-feed"
gem "jekyll-paginate-v2"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-archives"

# Compresión para producción
group :production do
  gem "jekyll-compress-html", "~> 0.5.0"
end

# Plataforma específica
gem "webrick", "~> 1.7"